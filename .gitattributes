# Set the default behavior, in case people don't have core.autocrlf set.
* text=auto

#Default behavior for reference & media directory is to leave endings alone
reference/**/* -text
media/**/* -text

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout.
*.c text
*.cpp text
*.h text
*.cs text

# Declare files that will always have CRLF line endings on checkout.
*.sln text eol=crlf
*.xaml text eol=crlf
*.resx text eol=crlf
*.cshtml text eol=crlf
*.csproj text eol=crlf
*.wsf text eol=crlf
*.ps1 text eol=crlf
*.ahk text eol=crlf
*.reg text eol=crlf
*.adml text eol=crlf
*.admx text eol=crlf

# Declare files that will always have LF line endings on checkout.
*.sh text eol=lf
*.csh text eol=lf
*.tcsh text eol=lf
*.py text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.pem text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.js text eol=lf
*.json text eol=lf
*.vue text eol=lf
*.ts text eol=lf
*.md text eol=lf
*.xml text eol=lf
*.svg text eol=lf
.git* text eol=lf
.editorconfig text eol=lf

# Denote all files that are truly binary and should not be modified.
*.png binary
*.jpg binary
*.xcf binary
*.ico binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
